{
  "stack": "heroku-22",
  "name": "heroku-trailhead-demo",
  "repository": "https://github.com/heroku/heroku-trailhead-demo",
  "keywords": [
    "demo",
    "trailhead",
    "heroku",
    "heroku connect"
  ],
  "logo": "https://github.com/heroku/heroku-trailhead-demo/blob/master/app/assets/images/trailhead-logo-demo.svg?raw=true",
  "scripts": {
    "postdeploy": "bin/rails db:seed"
  },
  "env": {
    "LANG": {
      "required": true,
      "value": "en_US.UTF-8"
    },
    "RACK_ENV": {
      "required": true,
      "value": "production"
    },
    "RAILS_ENV": {
      "required": true,
      "value": "production"
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true,
      "value": "enabled"
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true,
      "value": "enabled"
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    },
    "release": {
      "quantity": 0,
      "size": "standard-1x"
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
